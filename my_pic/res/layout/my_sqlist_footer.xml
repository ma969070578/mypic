<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/binding"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imageview_behind_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_banding" />

    <TextView
        android:id="@+id/textview_behind_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/imageview_behind_icon"
        android:text="@string/binding_sq"
        android:textColor="@color/black"
        android:textSize="26dp" />

    <ImageView
        android:id="@+id/imageview_behind_icon1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/user_icon01" />

</RelativeLayout>