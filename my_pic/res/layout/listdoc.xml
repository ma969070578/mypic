<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="7dip" >
        <RelativeLayout
            android:id="@+id/avalayout"
            android:layout_height="wrap_content"
            android:padding="0dip"
            android:layout_width="60dip"
             >
            <com.amima.app.widget.HeadImageView
                android:id="@+id/avatar"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_alignParentLeft="true"
                android:scaleType="fitCenter"
                android:src="@null" />

            <ImageView
                android:id="@+id/doctorStatus"
                android:layout_width="10dip"
                android:layout_height="10dip"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="1dp"
                android:layout_marginTop="5dp"
                android:background="@null"
                android:gravity="center" />
        </RelativeLayout>

        <com.amima.app.widget.HeadImageView
            android:id="@+id/shipin"
            android:layout_width="90dip"
            android:layout_height="36dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:paddingTop="1dip"
            android:scaleType="fitCenter"
            android:src="@drawable/user_anniu_zixun" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@id/shipin"
            android:layout_toRightOf="@id/avalayout"
            android:gravity="center_vertical|left"
            android:orientation="vertical"
            android:paddingLeft="8dip"
            android:paddingTop="1dip"
            android:text="姓名"
            android:textColor="@color/black"
            android:textSize="20dip" />
    </RelativeLayout>

</LinearLayout>